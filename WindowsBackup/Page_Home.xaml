<Page x:Class="WindowsBackup.Page_Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsBackup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Home">

    <Grid Grid.Column="1">
        <StackPanel Margin="70,100,100,10">
            <TextBlock Text="Home:" FontWeight="Bold" FontSize="14"></TextBlock>

            <StackPanel x:Name="sp_DiagramsIsSuccessfull" Margin="0,10,0,0" Orientation="Horizontal"></StackPanel >
        </StackPanel>
        <Button x:Name="bt_StartBackup" Content="Sicherung Starten" VerticalAlignment="Bottom" Height="40" Margin="70,0,50,70" Click="bt_StartBackup_Click"></Button>
        <Button x:Name="bt_DeleteConfig" Content="Konfiguration zurücksetzen" VerticalAlignment="Bottom" Height="40" Margin="70, 20,50,20" Click="bt_DeleteConfig_Click"></Button>
    </Grid>
</Page>
