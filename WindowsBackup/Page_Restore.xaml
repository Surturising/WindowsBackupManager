<Page x:Class="WindowsBackup.Page_Restore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsBackup"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Restore">

    <Grid>
        
        <StackPanel Margin="70,100,100,0">
            <StackPanel>
                <TextBlock Text="Rücksicherung:" FontWeight="Bold" FontSize="14"></TextBlock>
                <ComboBox x:Name="cb_Backups" Margin="0,0,0,10"></ComboBox>

                <Button x:Name="bt_RestoreData" Content="Dateien wiederherstellen" Click="bt_RestoreData_Click"></Button>
                <Button x:Name="bt_RestoreWindowsImage" Content="Windows Image wiederherstellen" Click="bt_RestoreWindowsImage_Click"></Button>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="sp_DrivesNotFound" VerticalAlignment="Bottom" Margin="70,100,100,0"></StackPanel>


    </Grid>
</Page>
